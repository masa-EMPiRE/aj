<div class="title">
    <h1><%= @farm.name %></h1>
</div>
<div>
  <div class="description">
    <%= @farm.description %>
</div>
<div>
  <div class = col-12>
    <div class = row>
      <div class = col-5>
        <%= image_tag @farm.image_url, :size =>'320x320' %>
      </div>
      <div class="event col-7">
        <h3>Event List</h3>
        <% @farm.events.each do |event| %>
          <%= event.eventname %>
          <%= event.date %>
          <%= button_to "参加", event_event_entries_path(event) %>
        <% end %>
      </div>
    </div>
  </div>
</div>